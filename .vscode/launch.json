{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "name": "Launch Chrome Browser",
            "request": "launch",
            "runtimeArgs": ["--remote-debugging-port=9222"],
            "url": "http://localhost:4200/",
            "presentation": {
                "hidden": true
            },
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Launch Chrome",
            "preLaunchTask": "start-dev-server",
            "configurations": ["Launch Chrome Browser"]
        }
    ]
}
